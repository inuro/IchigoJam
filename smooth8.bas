10 'Smooth scroll
20 LET[0],24,24,36,52,189,189,255,90
30 CLP:FOR J=0 TO 7:FOR I=0 TO 7
40 POKE#700+I+J*8,[I]>>(J)
50 POKE#740+I+J*8,[I]<<(8-J)
60 NEXT:NEXT
70 '
80 CLS:CLT:X=64:Y=15:A=0:B=0
90 @LOOP:IF TICK()<0 GOTO@BTN
100 IF VPEEK((X+1)/8,Y-1)||VPEEK((X+2)/8,Y-1) BEEP1:END
110 CLT:POKE #900+RND(32),ASC("*"):SCROLL2
120 @BTN:B=BTN(RIGHT)-BTN(LEFT)
130 IF B A=A+B*(ABS(A)+1) ELSE IF A!=0 A=A/2
140 IF A<-12 A=-12 ELSE IF A>12 A=12
150 'GOSUB@DEL
160 X=X+A:IF X<0 X=0 ELSE IF X>247 X=247
170 Z=#900+X/8+Y*32
180 IF PEEK(Z)=0 POKE Z,224+X%8
